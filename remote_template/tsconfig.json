{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "importHelpers": true,
    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": false,

    "sourceMap": false,
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,

//    "typeRoots": [
//      "src/typings/**/*.d.ts",
//      "node_modules/@types",
//      "../../shared/types/**/*.d.ts"
//    ],

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/typings/**/*.ts",
    "./node_modules/@types",
    "../shared/types/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "**/*.js"
  ]
}
